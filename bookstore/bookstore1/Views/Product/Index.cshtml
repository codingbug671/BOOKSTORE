@model IEnumerable<bookstore1.Models.Book>
    <div id="themeSlider" class="carousel slide" data-ride="carousel">
        
        <div class="carousel-inner" style="margin-top: 10px;">
            <div class="item active">
                
                <img style="height: 320px; width:100%;" src="../Images/biographies.jpg" alt="First slide">

                
            </div>
            <div class="item">
              
                <img style="height: 320px; width:100%" src="../Images/hot titles.jpg" alt="First slide">

               
            </div>
            <div class="item">
              
                <img style="height: 320px; width:100%" src="../Images/recommended reads.jpg" alt="First slide">

                
            </div>
        </div>
        <a class="left carousel-control" href="#themeSlider" data-slide="prev">
            <span class="fa fa-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#themeSlider" data-slide="next">
            <span class="fa fa-chevron-right"></span>
        </a>


        


        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h2>Our Books <small>trends books</small></h2>
                </div>
            </div>
        </div>

        <div class="row product-container">
            @foreach (var item in Model)
            {
                <div class="col-md-2 col-sm-2 col-xs-6" style="margin-bottom:8px">

                    <div class="thumbnail product-item" style="height:300px">
                        <a href="@Url.Action("Details", "Product", new { id= item.Id })">

                        <img class="img-responsive" title="Click to View Product detail"
                             style="cursor:pointer;height:130px;width:100px"
                             src="@Url.Content(item.Cover)" />
                        </a>
                        

                        <div class="caption">
                            <h5>@Html.DisplayFor(modelItem =>item.Title)</h5>
                            <p>@Html.DisplayFor(modelItem => item.Author)</p>
                            <p>@Html.DisplayFor(modelItem => item.formatPrice)</p>
                            
                        </div>

                    </div>

                </div>
            }
            </div>

