@model bookstore1.Models.User

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container wrapper">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-sm-offset-3">
            <!--SHIPPING METHOD-->
            <div class="panel panel-default">
                <div class="panel-heading">Sign Up</div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @if (ViewBag.Message != null)
                        {
                            <h4 style="color:white; padding-top: 10px;
    padding-bottom: 10px;
    background-color: #3CB371;
    padding-left: 2px;
    ">
                                @ViewBag.Message
                            </h4>
                        }
                        <div>Already have an account. Please <a href="@Url.Action("Login", "User")">Log In</a></div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control left" } })
                                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger left" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control left" } })
                                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger left" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control left" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger left" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control left" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger left" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control left" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger left" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Register" class="btn btn-primary left" />
                            </div>
                        </div>
                       
                    </div>
                    </div>
</div>
            </div>
        </div>
                    }

                   